<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.A12Ext" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorBackground">@android:color/system_neutral1_900</item>
        <item name="colorBackgroundFloating">@android:color/system_neutral1_700</item>

        <item name="colorPrimary">@android:color/system_accent1_100</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_100</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_50</item>

        <item name="colorSecondary">@android:color/system_accent1_100</item>
        <item name="colorSecondaryVariant">@android:color/system_accent1_100</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_50</item>

        <item name="android:statusBarColor" tools:targetApi="l">@android:color/system_neutral1_700</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:textColor">@color/text_color_primary_device_default_dark</item>
        <item name="android:textColorPrimary">@color/text_color_primary_device_default_dark</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_device_default_dark</item>
    </style>

    <style name="Theme.A12Ext.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@android:color/system_neutral1_700</item>
        <item name="colorPrimaryVariant">@android:color/system_neutral1_700</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_0</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>
</resources>
