<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.A12Ext" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorBackground">@color/dark_gray_bg</item>

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray_bg_elevated_4dp</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.A12Ext.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/dark_gray_bg_elevated_4dp</item>
        <item name="colorPrimaryVariant">@color/dark_gray_bg_elevated_4dp</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>
</resources>